<Window x:Class="ClientWPF.chatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="chatWindow" Height="450" Width="800" Loaded="chatW_load">
    <Grid>
        <ListBox x:Name="chatList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="77,84,161,84"/>
        <Label x:Name="accLabel" Content="Accaunt:" HorizontalAlignment="Left" Margin="23,26,0,0" VerticalAlignment="Top" Width="134"/>
        <Label x:Name="friendLabel" Content="Friend:" HorizontalAlignment="Left" Margin="646,26,0,0" VerticalAlignment="Top" Width="144"/>
        <TextBox x:Name="chatBox" HorizontalAlignment="Left" Margin="80,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="559" Height="54"/>
        <Button x:Name="sendButt" Content="Send" HorizontalAlignment="Left" Margin="661,370,0,0" VerticalAlignment="Top" Height="54" Width="95" Click="sendButt_Click"/>
        <Button x:Name="updateButt" Content="update" HorizontalAlignment="Left" Margin="661,125,0,0" VerticalAlignment="Top" Height="35" Width="95" Click="updateButt_Click"/>

    </Grid>
</Window>
